<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ext="clr-namespace:AppGallary.XamarinForms.Controles.ImagemControle"
             x:Class="AppGallary.XamarinForms.Controles.ImagemControle.Imagem">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout >
                <Label Text="Source: Resource" />
                <Image Grid.Row="0" Grid.Column="0" HorizontalOptions="FillAndExpand" x:Name="Imagem01" Source="{ext:ImageResource AppGallary.XamarinForms.Controles.ImagemControle.background.png}" 
                 Aspect="AspectFill"/>

                <Label Text="Source:File, Aspect" />
                <Image Source="xamarin.png" Aspect="Fill" />
                
                <Image Source="xamarin.png" Aspect="AspectFit" BackgroundColor="Yellow" HorizontalOptions="Center" WidthRequest="150" HeightRequest="50"/>


                <Label Text="Source:Uri, Aspect" />
                <Image Source="https://blog.construtoralaguna.com.br/wp-content/uploads/2017/08/Lago-de-Braies-Alpes-Italia-Construtora-Laguna.jpg" 
                       Aspect="AspectFill"
                       WidthRequest="50" HeightRequest="100"
                       HorizontalOptions="Center"
                       />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>