<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallary.XamarinForms.Controles.CaixaDeRadioControle.CaixaDeRadio">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="IsChecked, Text, TextColor"/>
            <RadioButton Text="C#" GroupName="BackEnd" IsChecked="True"/>
            <RadioButton Text="PHP" GroupName="BackEnd" IsChecked="False" />
            <RadioButton Text="Java" GroupName="BackEnd" IsChecked="False" />
            <Label Text="GroupName" />
            <RadioButton Text="JavaScript" GroupName="FrontEnd" CheckedChanged="RadioButton_CheckedChanged"/>
            <RadioButton Text="SASS" GroupName="FrontEnd" CheckedChanged="RadioButton_CheckedChanged"/>
            <RadioButton Text="HTML" GroupName="FrontEnd" CheckedChanged="RadioButton_CheckedChanged"/>
            <Label x:Name="lblInformativo" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>