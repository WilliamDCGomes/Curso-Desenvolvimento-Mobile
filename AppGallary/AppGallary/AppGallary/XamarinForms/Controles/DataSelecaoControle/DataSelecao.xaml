<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Padding="10"
             x:Class="AppGallary.XamarinForms.Controles.DataSelecaoControle.DataSelecao">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Date, MinimumDate, MaximumDate" />
            <DatePicker Date="03/01/2021" MinimumDate="01/20/2020" MaximumDate="01/15/2025"/>
            
            <Label Text="Format, CharacterSpacing" />
            <DatePicker Format="dd/MM/yyyy" CharacterSpacing="5"/>

            <Label Text="TextColor, FontFamily, FontSize, FontAttributes" />
            <DatePicker Format="dd/MM/yyyy" TextColor="Accent" FontFamily="sans-serif-light" FontSize="24" FontAttributes="Italic"/>
            <Label Text="Eventos: " />
            <DatePicker Format="dd/MM/yyyy" DateSelected="DatePicker_DateSelected"/>
            <Label x:Name="lblInformativo" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>