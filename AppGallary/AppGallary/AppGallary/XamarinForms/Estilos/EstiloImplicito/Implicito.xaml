<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallary.XamarinForms.Estilos.EstiloImplicito.Implicito">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="Accent" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="Margin" Value="10" />
                <Setter Property="CornerRadius" Value="40" />
            </Style>
            <Style TargetType="InputView" ApplyToDerivedTypes="True">
                <Setter Property="BackgroundColor" Value="#F2F2F2" />
                <Setter Property="TextColor" Value="Accent" />
                <Setter Property="PlaceholderColor" Value="LightSalmon" />
                <Setter Property="Margin" Value="10" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="ImplicitStyle" />
            <Button Text="Botão 01" />
            <Button Text="Botão 02" />
            <Entry Placeholder="Digite alguma coisa" />
            <Editor Placeholder="Digite algo" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>