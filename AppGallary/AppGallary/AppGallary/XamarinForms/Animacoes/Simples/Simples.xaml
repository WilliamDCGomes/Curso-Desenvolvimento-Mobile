<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallary.XamarinForms.Animacoes.Simples.Simples">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Animation" />
            <BoxView x:Name="Box" WidthRequest="100" HeightRequest="100" CornerRadius="5" BackgroundColor="Accent" Opacity="1" Rotation="0" RotationX="0" RotationY="0" TranslationX="0" TranslationY="0" HorizontalOptions="Center" VerticalOptions="Center" />
            <StackLayout VerticalOptions="EndAndExpand">
                <Button Text="Translate" Clicked="BtnTranslate"/>
                <Button Text="Rotation" Clicked="BtnRotate"/>
                <Button Text="Scale" Clicked="BtnScale"/>
                <Button Text="Opacity" Clicked="BtnOpacity"/>
                <Button x:Name="everthing" Text="Começar todas" Clicked="Button_Clicked" />
                <Button x:Name="combination" Text="Animação Combinada" Clicked="BtnAnimacaoCombinada" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>